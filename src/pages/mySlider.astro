---

<Layout title="Welcome to Astro.">

    <div class="container flex flex-row justify-center items-center bg-white">
        <div class="track flex flex-row items-center gap-x-8 border-solid border-2 border-sky-500 gradient-overlay">
        {
            localIcons.map((item, index) => (
                <div class="img-container">
                    <img src={item.src} alt="" width={item.width} data-key={index} />
                </div>
            ))
        }
        </div>
    </div>
</Layout>
<style>
.container {
    height: 100vh;
}
.img-container {
    opacity: 0;
    &:nth-child(2), &:nth-child(4) {
        opacity: 0.3;
    }
    &:nth-child(3) {
        opacity: 1;
    }
}
